{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Verde Utility Definition",
    "description": "utility json file config autocompletion",
    "type": "object",
    "additionalProperties": true,
    "required": ["name", "owner", "version", "public_repo", "private"],
    "properties": {
        "name": {
            "type": "string", 
            "description": "utility name, which will be the repo name also"
        }, 
        "owner": {
            "type": "string",
            "description": "owner/organization name on github"
        },
        "version": {
            "type": "string",
            "pattern": "[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}",
            "description": "target version"
        }, 
        "description": {
            "type": "string"
        },
        "hash": {
            "type": "string", 
            "readOnly": true
        }, 
        "public_repo": {
            "type": "boolean",
            "description": "whether the repo is public or not on github.com (can be seen by anyone)"
        },
        "private": {
            "type": "boolean", 
            "description": "whether the local utility code is private for the current project, if it is, it will prevent pushing"
        },
        "deps": {
            "description": "dependencies",
            "type": "object",
            "patternProperties": {
                ".+": {
                    "description": "dependency",
                    "type": "object",
                    "required": ["owner", "repo", "version", "update_policy"],
                    "properties": {
                        "owner": {
                            "type": "string",
                            "description": "owner/organization name on github"
                        },
                        "repo": {
                            "type": "string",
                            "description": "repository (utility) name on github"
                        },
                        "version": {
                            "type": "string",
                            "pattern": "[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}",
                            "description": "target version"
                        },
                        "update_policy": {
                            "enum": ["major", "minor", "batch", "fixed"]
                        }
                    }
                }
            }
        }
    }
}
